<% if obj.errors.any? %>
	<div class="container">
		<div class="row sign-up-form">
			<div class="col s12">
				<div class="card-panel red lighten-2 white-text">
					<strong><%= pluralize(obj.errors.count, "error") %></strong>
					prevented your profile from being created:
					<ul>
						<% obj.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
	</div>
<% end %>
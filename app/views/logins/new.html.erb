<div class="container section">
	<div class="row center section">
		<div class="col s12">
			<div class="card-panel">
				<h3 class="center-align">Log in</h3>
				<div class="row">
					<%= form_for(:logins, html: {class: "col s12"}) do |f| %>
						<div class="row">
							<div class="input-field col s12">
								<%= f.email_field :email, placeholder: "Enter your email address", autofocus: true %>
								<%= f.label :email %>
							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<%= f.password_field :password, placeholder: "Enter your password" %>
								<%= f.label :password, class: "active" %>
							</div>
						</div>
						<div class="row">
							<div class="input-field col s12">
								<%= f.button '<i class="material-icons right">arrow_forward</i>Log in'.html_safe, class: "btn orange waves-effect waves-light right" %>
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
